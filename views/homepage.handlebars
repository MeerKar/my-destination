<!-- Loop over each object in the TravelPosts array -->
{{#each posts as |post| }}
<div class="row mb-4 Post">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
  {{!-- {{{get_emoji category}}} --}}

      {{{get_emoji "travel"}}} 
      {{{get_emoji "blogpost"}}} 
      {{!-- {{{get_emoji "map"}}}  --}}
      {{{get_emoji "pictures"}}} 
      
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>
      Explore on <a href="https://www.openstreetmap.org" target="_blank">OpenStreetMap</a>
    </p>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
  
  {{/each}}

