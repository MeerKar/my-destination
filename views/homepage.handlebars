    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/TravelPost/{{TravelPost.id}}">{{TravelPost.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
